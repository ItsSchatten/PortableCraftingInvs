<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.itsschatten.portablecrafting</groupId>
    <artifactId>PortableCraftingInvs-parent</artifactId>
    <version>1.2.2</version>
    <description>Open crafting inventories, such as anvils, crafting table, enchant tables, etc..</description>
    <packaging>pom</packaging>

    <properties>
        <maven.skip.test>true</maven.skip.test>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
    </properties>

    <modules>
        <module>core</module>
        <module>Interface</module>
        <module>v1_15_R1</module>
        <module>v1_16_R1</module>
    </modules>

    <repositories>
        <repository>
            <id>shadows-libs</id>
            <url>https://itsschatten.com/repositories/repos/shadowlibs/</url>
        </repository>
        <repository>
            <id>CodeMC</id>
            <url>https://repo.codemc.org/repository/maven-public</url>
        </repository>
    </repositories>

    <dependencies>

        <dependency>
            <groupId>com.itsschatten.portablecrafting</groupId>
            <artifactId>PortableCraftingInvs-v1_16_R1</artifactId>
            <version>1.2.0</version>
            <scope>compile</scope>
        </dependency>

        <dependency>
            <groupId>com.itsschatten.portablecrafting</groupId>
            <artifactId>PortableCraftingInvs-v1_15_R1</artifactId>
            <version>1.2.0</version>
            <scope>compile</scope>
        </dependency>

        <dependency>
            <groupId>com.itsschatten.portablecrafting</groupId>
            <artifactId>PortableCraftingInvs-Interface</artifactId>
            <version>1.2.0</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <version>1.18.12</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.itsschatten.libs</groupId>
            <artifactId>ShadowLibs</artifactId>
            <version>1.3</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.bstats</groupId>
            <artifactId>bstats-bukkit-lite</artifactId>
            <version>1.7</version>
            <scope>compile</scope>
        </dependency>
    </dependencies>

</project>